<?xml version="1.0" encoding="utf-8"?>
<Container version="2">
  <Name>Podsync</Name>
  <Description>Turn YouTube or Vimeo channels, users, or playlists into podcast feeds</Description>
  <Registry>https://hub.docker.com/r/mxpv/podsync/</Registry>
  <Repository>mxpv/podsync</Repository>
  <BindTime>true</BindTime>
  <Privileged>false</Privileged>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>11640</HostPort>
        <ContainerPort>8080</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Environment/>
  <Config Name="Port" Target="8080" Default="11640" Mode="tcp" Description="Container Port: 8080" Type="Port" Display="always" Required="true" Mask="false">11640</Config>
  <Config Type="Path" Name="Storage Directory" Target="/app/data" Default="/mnt/user/appdata/podsync/data" Mode="rw" Description="The folder to save podsync's data" Required="true">/mnt/user/appdata/podsync/data</Config>
  <Config Type="Path" Name="Config Directory" Target="/app/config" Default="/mnt/user/appdata/podsync/config" Mode="rw" Description="The folder to save podsync's config" Required="true">/mnt/user/appdata/podsync/config</Config>
  <Config Type="Variable" Name="Config Path" Target="PODSYNC_CONFIG_PATH" Default="/app/config/config.toml" Description="The location of the config file (in the container)" Mask="false" Display="always" Required="true">/app/config/config.toml</Config>
  <Icon>https://github.com/mxpv/podsync/raw/master/docs/img/logo.png</Icon>
  <ExtraParams></ExtraParams>
</Container>